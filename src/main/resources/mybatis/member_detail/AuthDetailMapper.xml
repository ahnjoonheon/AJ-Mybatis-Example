<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.mybatis.member_detail.mapper.AuthDetailMapper">
    <select id="selectMemberByUserNameAndPassword" resultType="com.example.mybatis.member.dto.LoginResponse">
        select username
        from member_detail
        <where>
            and username = #{username}
            and password = #{password}
        </where>
    </select>


    <select id="selectMemberByUserName" resultType="com.example.mybatis.member_detail.dto.LoadUserResponse">
        select username
        from member_detail
        <where>
            and username = #{username}
        </where>
    </select>
</mapper>